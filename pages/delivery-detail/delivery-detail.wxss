/* pages/delivery-detail/delivery-detail.wxss */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E0E0E0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left,
.header-right {
  flex: 1;
}

.header-title {
  flex: 2;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.back-btn {
  font-size: 36rpx;
  color: #666666;
  padding: 10rpx;
}

.edit-btn,
.save-btn {
  font-size: 28rpx;
  color: #3A7FFF;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  background: #F0F8FF;
}

/* 送货单基本信息 */
.delivery-info {
  background: #FFFFFF;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.info-card {
  padding: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  flex: 1;
}

.total-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF4757;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-tag.pending {
  background: #FFF3CD;
  color: #856404;
}

.status-tag.in_progress {
  background: #D1ECF1;
  color: #0C5460;
}

.status-tag.completed {
  background: #D4EDDA;
  color: #155724;
}

/* 区域样式 */
.section {
  background: #FFFFFF;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.add-btn {
  font-size: 26rpx;
  color: #3A7FFF;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background: #F0F8FF;
}

/* 客户列表 */
.customer-list {
  padding: 0 30rpx;
}

.customer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.customer-item:last-child {
  border-bottom: none;
}

.customer-info {
  flex: 1;
}

.customer-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.customer-phone {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 4rpx;
}

.customer-order-count {
  font-size: 22rpx;
  color: #999;
  margin-left: 8rpx;
}

.customer-address {
  display: block;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

.customer-actions {
  flex-shrink: 0;
}

.remove-btn {
  font-size: 24rpx;
  color: #FF4757;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background: #FFF5F5;
}

/* 订单列表 */
.order-list {
  padding: 0 30rpx;
}

/* 客户订单分组 */
.customer-orders {
  margin-bottom: 30rpx;
}

.customer-order-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.customer-order-header .customer-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.customer-order-header .order-count {
  font-size: 24rpx;
  color: #666;
  margin-left: 12rpx;
}

.order-item {
  margin-bottom: 30rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #F8F9FA;
  border-bottom: 1rpx solid #E0E0E0;
}

.order-customer {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.order-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
}

.order-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF4757;
}

.order-products {
  padding: 0 24rpx;
}

.product-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  margin-right: 16rpx;
}

.product-name {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4rpx;
}

.product-barcode {
  display: block;
  font-size: 22rpx;
  color: #999999;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  font-size: 22rpx;
  color: #666666;
}

.detail-value {
  font-size: 22rpx;
  color: #333333;
}

.detail-value.cost {
  color: #FF4757;
}

.detail-value.price {
  color: #2E7D32;
}

.detail-value.retail {
  color: #FFA502;
}

.product-actions {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0;
}

.edit-btn {
  font-size: 22rpx;
  color: #3A7FFF;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
  background: #F0F8FF;
}

.order-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #F8F9FA;
  border-top: 1rpx solid #E0E0E0;
}

.add-product-btn {
  font-size: 24rpx;
  color: #3A7FFF;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background: #F0F8FF;
}

.remove-order-btn {
  font-size: 24rpx;
  color: #FF4757;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  background: #FFF5F5;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 30rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 12rpx;
  display: block;
}

.empty-subtext {
  font-size: 24rpx;
  color: #BBBBBB;
  display: block;
}

/* 配送员选择 */
.employee-picker {
  padding: 0 30rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333333;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

/* 备注输入 */
.remark-input {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
  border: none;
  outline: none;
  box-sizing: border-box;
}

/* 操作按钮 */
.action-section {
  padding: 40rpx 30rpx;
}

.btn {
  width: 100%;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: #3A7FFF;
  color: #FFFFFF;
}

.btn-danger {
  background: #FF4757;
  color: #FFFFFF;
}

.btn-secondary {
  background: #F8F9FA;
  color: #666666;
  border: 1rpx solid #E0E0E0;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999999;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E0E0E0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 40rpx;
  color: #999999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: calc(80vh - 100rpx);
  overflow-y: auto;
}

/* 搜索框 */
.search-input {
  width: 100%;
  height: 80rpx;
  background: #F8F9FA;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  border: 2rpx solid #E0E0E0;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* 客户选项 */
.customer-options {
  max-height: 400rpx;
  overflow-y: auto;
}

.customer-option {
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.customer-option:last-child {
  border-bottom: none;
}

.customer-option .customer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.customer-option .customer-phone {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 4rpx;
}

.customer-option .customer-address {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

/* 订单创建 */
.order-customer-select {
  margin-bottom: 30rpx;
}

.select-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.order-products-section {
  margin-bottom: 30rpx;
}

.order-products-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.order-product-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.order-product-item:last-child {
  border-bottom: none;
}

.order-product-item .product-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.order-product-item .product-info {
  flex: 1;
  margin-right: 16rpx;
}

.product-inputs {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.input-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.input-label {
  font-size: 24rpx;
  color: #666666;
  min-width: 120rpx;
}

.quantity-input,
.cost-input,
.price-input,
.retail-input {
  flex: 1;
  height: 60rpx;
  background: #F8F9FA;
  border-radius: 6rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  border: 1rpx solid #E0E0E0;
}

.unit-text {
  font-size: 24rpx;
  color: #666666;
  margin-left: 8rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-actions .btn {
  flex: 1;
  margin-bottom: 0;
}

/* 商品选项 */
.product-options {
  max-height: 400rpx;
  overflow-y: auto;
}

.product-option {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.product-option:last-child {
  border-bottom: none;
}

.product-option .product-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.product-option .product-info {
  flex: 1;
}

.product-option .product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.product-option .product-barcode {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 4rpx;
}

.product-option .product-price {
  font-size: 24rpx;
  color: #666666;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 16rpx 24rpx;
  }
  
  .header-title {
    font-size: 30rpx;
  }
  
  .section {
    margin: 16rpx;
  }
  
  .section-header {
    padding: 24rpx;
  }
  
  .customer-list,
  .order-list {
    padding: 0 24rpx;
  }
  
  .modal-body {
    padding: 24rpx;
  }
} 