/* pages/delivery-detail/delivery-detail.wxss */
.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E0E0E0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left,
.header-right {
  flex: 1;
}

.header-title {
  flex: 2;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.back-btn {
  font-size: 36rpx;
  color: #666666;
  padding: 10rpx;
}

.edit-btn,
.save-btn {
  font-size: 28rpx;
  color: #3A7FFF;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  background: #F0F8FF;
}

/* 送货单基本信息 */
.delivery-info {
  background: #FFFFFF;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.info-card {
  padding: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  flex: 1;
}

.total-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF4757;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-tag.pending {
  background: #FFF3CD;
  color: #856404;
}

.status-tag.in_progress {
  background: #D1ECF1;
  color: #0C5460;
}

.status-tag.completed {
  background: #D4EDDA;
  color: #155724;
}

.status-tag.cancelled {
  background: #F8D7DA;
  color: #721C24;
}

/* 区块样式 */
.section {
  background: #FFFFFF;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E0E0E0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.btn-add {
  background: #3A7FFF;
  color: #FFFFFF;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 客户列表 */
.customer-list {
  padding: 20rpx;
}

.customer-item {
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.customer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-bottom: 1rpx solid #E0E0E0;
}

.customer-info {
  flex: 1;
}

.customer-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 5rpx;
}

.customer-phone {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 5rpx;
}

.customer-address {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.customer-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.customer-total {
  font-size: 30rpx;
  font-weight: 600;
  color: #FF4757;
}

.btn-remove {
  background: #FF4757;
  color: #FFFFFF;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.btn-add-order {
  background: #28A745;
  color: #FFFFFF;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.order-item {
  border: 1rpx solid #D0D0D0;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #F1F3F4;
  border-bottom: 1rpx solid #D0D0D0;
}

.order-no {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
}

.order-amount {
  font-size: 26rpx;
  font-weight: 600;
  color: #FF4757;
}

.btn-remove-order {
  background: #DC3545;
  color: #FFFFFF;
  border: none;
  padding: 8rpx 15rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

/* 商品列表 */
.product-list {
  padding: 20rpx;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.product-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
}

.btn-add-product {
  background: #17A2B8;
  color: #FFFFFF;
  border: none;
  padding: 8rpx 15rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.product-item {
  border: 1rpx solid #E9ECEF;
  border-radius: 6rpx;
  margin-bottom: 15rpx;
  padding: 15rpx;
  background: #FFFFFF;
}

.product-info {
  margin-bottom: 15rpx;
}

.product-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 5rpx;
}

.product-barcode {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

.product-details {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.label {
  font-size: 24rpx;
  color: #666666;
  min-width: 120rpx;
}

.input-quantity,
.input-price {
  flex: 1;
  border: 1rpx solid #D0D0D0;
  border-radius: 4rpx;
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  background: #FFFFFF;
}

.quantity-display,
.price-display {
  flex: 1;
  font-size: 24rpx;
  color: #333333;
  padding: 8rpx 12rpx;
}

.product-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-top: 1rpx solid #E0E0E0;
  margin-top: 10rpx;
}

.total-label {
  font-size: 26rpx;
  color: #333333;
}

.total-amount {
  font-size: 26rpx;
  font-weight: 600;
  color: #FF4757;
}

.btn-remove-product {
  background: #6C757D;
  color: #FFFFFF;
  border: none;
  padding: 8rpx 15rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  width: 100%;
  margin-top: 10rpx;
}

/* 空状态 */
.empty-state {
  padding: 60rpx 20rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 总金额 */
.total-section {
  background: #FFFFFF;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.total-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.total-amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF4757;
}

/* 操作按钮 */
.action-section {
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
}

.btn-confirm {
  flex: 1;
  background: #28A745;
  color: #FFFFFF;
  border: none;
  padding: 25rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-delete {
  flex: 1;
  background: #FF4757;
  color: #FFFFFF;
  border: none;
  padding: 25rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E0E0E0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.btn-close {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #999999;
  padding: 0;
  width: auto;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
  padding: 20rpx;
}

.search-input {
  width: 100%;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  background: #FFFFFF;
}

.customer-option,
.product-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #E0E0E0;
  background: #FFFFFF;
}

.customer-option:active,
.product-option:active {
  background: #F8F9FA;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 5rpx;
}

.product-price {
  font-size: 26rpx;
  color: #FF4757;
  font-weight: 600;
} 