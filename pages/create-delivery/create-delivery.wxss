/* pages/create-delivery/create-delivery.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 区块样式 */
.section {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.btn-add {
  background: #007aff;
  color: #fff;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 客户列表 */
.customer-list {
  padding: 20rpx;
}

.customer-item {
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.customer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #eee;
}

.customer-info {
  flex: 1;
}

.customer-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.customer-phone {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.customer-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.customer-total {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff6b35;
}

.btn-remove {
  background: #ff4757;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.btn-add-order {
  background: #28a745;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.order-item {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f1f3f4;
  border-bottom: 1rpx solid #ddd;
}

.order-no {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.order-amount {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff6b35;
}

.btn-remove-order {
  background: #dc3545;
  color: #fff;
  border: none;
  padding: 8rpx 15rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

/* 商品列表 */
.product-list {
  padding: 20rpx;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.product-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.btn-add-product {
  background: #17a2b8;
  color: #fff;
  border: none;
  padding: 8rpx 15rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.product-item {
  border: 1rpx solid #e9ecef;
  border-radius: 6rpx;
  margin-bottom: 15rpx;
  padding: 15rpx;
  background: #fff;
}

.product-info {
  margin-bottom: 15rpx;
}

.product-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.product-barcode {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.product-details {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
  min-width: 120rpx;
}

.input-quantity,
.input-price {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  background: #fff;
}

.product-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-top: 1rpx solid #eee;
  margin-top: 10rpx;
}

.total-label {
  font-size: 26rpx;
  color: #333;
}

.total-amount {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff6b35;
}

.btn-remove-product {
  background: #6c757d;
  color: #fff;
  border: none;
  padding: 8rpx 15rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  width: 100%;
  margin-top: 10rpx;
}

/* 空状态 */
.empty-state {
  padding: 60rpx 20rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 总金额 */
.total-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.total-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 操作按钮 */
.action-section {
  padding: 20rpx;
}

.btn-create {
  background: #007aff;
  color: #fff;
  border: none;
  padding: 25rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
}

.btn-create:disabled {
  background: #ccc;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.btn-close {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #999;
  padding: 0;
  width: auto;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
  padding: 20rpx;
}

.customer-option,
.product-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}

.customer-option:active,
.product-option:active {
  background: #f8f9fa;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.product-price {
  font-size: 26rpx;
  color: #ff6b35;
  font-weight: bold;
} 