/* pages/delivery/delivery.wxss */
.container {
  padding: 20rpx;
}

/* 搜索区域 */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  border: 2rpx solid #E0E0E0;
  box-sizing: border-box;
}

.search-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999999;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666666;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #3A7FFF;
  color: #FFFFFF;
}

/* 送货单列表 */
.delivery-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.delivery-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.delivery-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.delivery-number {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.delivery-content {
  margin-bottom: 20rpx;
}

.delivery-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.employee-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.delivery-date {
  font-size: 24rpx;
  color: #999999;
}

.delivery-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-count {
  font-size: 26rpx;
  color: #666666;
}

.total-amount {
  font-size: 30rpx;
  font-weight: bold;
  color: #3A7FFF;
}

.delivery-footer {
  border-top: 2rpx solid #F0F0F0;
  padding-top: 20rpx;
}

.delivery-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.btn-sm {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
  display: block;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-more-text {
  font-size: 28rpx;
  color: #3A7FFF;
} 